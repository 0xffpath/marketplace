{% extends 'base.html.twig' %}

{% block title %}Cyfer - Listings{% endblock %}
{% block nav %}{% include '/nav.html.twig' %}{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/cryptocoins.css') }}" />
{% endblock %}
{% block body %}
    <br />
    <div class="container-fluid">
        <div class="columns is-multiline">
            <div class="column is-one-fifths">
                <div class="column is-10 is-offset-2">
                    {% include '/dashboard/sidebar.html.twig' %}
                </div>
            </div>
            <div class="column is-four-fifths">
                <div class="column is-10">
                    <div class="content">
                        <div class="columns is-multiline">
                            <div class="column is-full">
                                <div class="tabs is-paddingless-left">
                                    <ul class="is-marginless-left">
                                        <li></li>
                                        <li role="nav" class="is-active"><a href="/shipping/"><i class="fa fa-list"></i>&nbsp;Shipping</a></li>
                                        <li role="nav"><a href="/shipping/new/"><i class="fa fa-plus"></i>&nbsp;New</a></li>
                                    </ul>
                                </div>
                            </div>
                            {% if not options %}
                                <div class="column is-full">
                                    <div class="message">
                                        <article class="message-body">
                                            <h2>You have no shipping options.</h2>
                                        </article>
                                    </div>
                                </div>
                            {% endif %}
                            {% for shipping in options %}
                                <div class="column is-full">
                                    <div class="message">
                                        <article class="message-body">
                                            <b>{{ shipping.shippingOption }}</b> :: {{ currency }} {{ shipping.price }}
                                            <a class="is-pulled-right button is-danger is-small" href="/shipping/delete/{{ shipping.id }}/">delete</a>
                                        </article>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}