{% extends 'base.html.twig' %}

{% block title %}Cyfer - Dashboard{% endblock %}
{% block nav %}{% include '/nav.html.twig' %}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="col-md-2 col-md-offset-1">
            {% include '/dashboard/sidebar.html.twig' %}
        </div>
        <div class="col-md-8">
            <div class="col-md-12">
                <div class="col-md-offset-1">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-10">
                                            <h2>Dashboard</h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <hr class="col-md-11" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-10">
                            <b>News:</b>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-10">
                            <p>Libertas is a marketplace that supports Bitcoin, Bitcoin-Cash, PIVX, Monero, and Ethereum. 1% commisions. Multisignature enabled. Open source, code can be found on GitHub.</p>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="col-md-11">
                                <div class="bs-well">
                                    <h3 class="header">My Orders</h3>
                                    <hr class="hr-sm"/>
                                    {% set status = dashboard_notifications.getOrderStatus() %}
                                    {{ dump(status) }}
                                    <div class="row">
                                        <div class="col-md-10 pull-left">
                                            <h3 class="item">{{ status.confirmation }}</h3>
                                            <p class="item">&nbsp;orders awaiting confirmations</p>
                                        </div>
                                        <div class="pull-right col-md-2">
                                            <i class="fa fa-clock-o fa-2x"></i>
                                        </div>
                                    </div>
                                    <hr class="hr-sm"/>
                                    <div class="row">
                                        <div class="col-md-10 pull-left">
                                            <h3 class="item">{{ status.pending }}</h3>
                                            <p class="item">&nbsp;orders awaiting acceptance</p>
                                        </div>
                                        <div class="pull-right col-md-2">
                                            <i class="fa fa-check-circle-o fa-2x"></i>
                                        </div>
                                    </div>
                                    <hr class="hr-sm"/>
                                    <div class="row">
                                        <div class="col-md-10 pull-left">
                                            <h3 class="item">{{ status.accepted }}</h3>
                                            <p class="item">&nbsp;orders processing</p>
                                        </div>
                                        <div class="pull-right col-md-2">
                                            <i class="fa fa-refresh fa-2x"></i>
                                        </div>
                                    </div>
                                    <hr class="hr-sm"/>
                                    <div class="row">
                                        <div class="col-md-10 pull-left">
                                            <h3 class="item">{{ status.shipped }}</h3>
                                            <p class="item">&nbsp;orders in transit</p>
                                        </div>
                                        <div class="pull-right col-md-2">
                                            <i class="fa fa-truck fa-2x"></i>
                                        </div>
                                    </div>
                                    <hr class="hr-sm"/>
                                    <div class="row">
                                        <div class="col-md-10 pull-left">
                                            <h3 class="item">{{ status.finalized }}</h3>
                                            <p class="item">&nbsp;finalized orders</p>
                                        </div>
                                        <div class="pull-right col-md-2">
                                            <i class="fa fa-check fa-2x"></i>
                                        </div>
                                    </div>
                                    <hr class="hr-sm"/>
                                    <div class="row">
                                        <div class="col-md-10 pull-left">
                                            <h3 class="item">{{ status.disputed }}</h3>
                                            <p class="item">&nbsp;disputed orders</p>
                                        </div>
                                        <div class="pull-right col-md-2">
                                            <i class="fa fa-balance-scale fa-2x"></i>
                                        </div>
                                    </div>
                                    <hr class="hr-sm"/>
                                    <div class="row">
                                        <div class="col-md-10 pull-left">
                                            <h3 class="item">{{ status.canceled }}</h3>
                                            <p class="item">&nbsp;canceled orders</p>
                                        </div>
                                        <div class="pull-right col-md-2">
                                            <i class="fa fa-exclamation-triangle fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="col-md-11">
                                <div class="bs-well">
                                    <h3 class="header">New Messages</h3>
                                    <hr class="hr-sm"/>
                                    {% if threads %}
                                        <table style="font-size:14px;" class="table">
                                            {% for thread in threads %}
                                                <tr>
                                                    <td>
                                                        <a href="/message/{{ thread.id }}/">{{ thread.subject }}</a>
                                                    </td>
                                                    <td>{{ thread.0.lastMessage|date("F j, Y, g:i a") }} UTC</td>
                                                </tr>
                                            {% endfor %}
                                        </table>
                                    {% else %}
                                        <h4 align="center"><i class="fa fa-info-circle"></i> You have no new messages.</h4>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}